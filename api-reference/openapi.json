{
  "openapi": "3.0.1",
  "info": {
    "title": "Tax Engine API",
    "description": "All of the endpoints",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://10.215.236.57:3000/v1/"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
   "/hello": {
      "get": {
        "summary": "Echo a query parameter",
        "description": "Returns the value of the 'echo' query parameter.",
        "parameters": [
          {
            "in": "query",
            "name": "echo",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "The value to be echoed back in the response."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "example": "Echo: your_query_value"
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/calculations":{
      "post": {
        "description": "Gives you back tax stuff",
        "requestBody": {
          "description": "Cart to calculate tax for",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CalculationRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Calculate response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CalculationResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/transactions": {
      "post": {
        "description": "How you tell us when a sale was made",
        "parameters": [
          {
            "name": "echo",
            "in": "query",
            "description": "The maximum number of results to return",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Plant response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Plant"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/plants/{id}": {
      "delete": {
        "description": "Deletes a single plant based on the ID supplied",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of plant to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Plant deleted",
            "content": {}
          },
          "400": {
            "description": "unexpected error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CalculationRequest": {
        "type": "object",
        "properties": {
          "address_details": {
            "$ref": "#/components/schemas/AddressDetails"
          },
          "line_items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/LineItem"
            }
          }
        },
        "required": ["address_details", "line_items"]
      },
      "AddressDetails": {
        "type": "object",
        "properties": {
          "address": {
            "$ref": "#/components/schemas/Address"
          },
          "type": {
            "type": "string",
            "example": "billing"
          }
        },
        "required": ["address", "type"]
      },
      "Address": {
        "type": "object",
        "properties": {
          "line1": {
            "type": "string",
            "example": "3990 N County Rd 300 E"
          },
          "line2": {
            "type": "string",
            "example": ""
          },
          "city": {
            "type": "string",
            "example": "Danville"
          },
          "state": {
            "type": "string",
            "example": "IN"
          },
          "postal_code": {
            "type": "string",
            "example": "46122"
          },
          "country": {
            "type": "string",
            "example": "USA"
          }
        },
        "required": ["line1", "city", "state", "postal_code", "country"]
      },
      "LineItem": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "example": 100
          },
          "product": {
            "type": "string",
            "example": "Widget"
          },
          "quantity": {
            "type": "integer",
            "example": 2
          },
          "tax_included": {
            "type": "boolean",
            "example": true
          },
          "tax_code": {
            "type": "string",
            "example": "TX123"
          }
        },
        "required": ["amount", "product", "quantity", "tax_included", "tax_code"]
      },
      "CalculationResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "success"
          },
          "calculation_id": {
            "type": "string",
            "example": "calc_123456789"
          },
          "total_tax": {
            "type": "number",
            "example": 10.5
          }
        }
      },
      "Plant": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "description": "The name of the plant",
            "type": "string"
          },
          "tag": {
            "description": "Tag to specify the type",
            "type": "string"
          }
        }
      },
      "NewPlant": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Plant"
          },
          {
            "required": [
              "id"
            ],
            "type": "object",
            "properties": {
              "id": {
                "description": "Identification number of the plant",
                "type": "integer",
                "format": "int64"
              }
            }
          }
        ]
      },
      "Error": {
        "required": [
          "error",
          "message"
        ],
        "type": "object",
        "properties": {
          "error": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}